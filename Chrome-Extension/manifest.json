{
    "manifest_version": 2,
    "name": "Share YouTube Status To Discord",
    "short_name": "YouTube Status",
    "version": "0.0.0.0",
    "author": "NITIC Students",
    "description": "When you watching YouTube, Discord show your watching activity by this app.",
    "background": {
        "scripts": ["src/jquery-3.6.0.min.js", "src/background.js"],
        "persistent": true
    },
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "img/icon19.png"
        },
        "default_title": "YouTube Status",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "nativeMessaging"
    ],
    "homepage_url": "https://github.com/YouTube-Status"
}